echo "Install direnv..."
brew install direnv

echo "Install httpie..."
brew install httpie

echo "Installing Golang"
brew install golang

echo "Create go working dir"
mkdir -p $HOME/Work/gh
mkdir -p $HOME/Work/tmp

echo "Installing docker"
brew install docker
brew install docker-compose
brew install kubectl
brew install colima

echo "Installing fira-code font"
brew tap homebrew/cask-fonts
brew install font-fira-code font-fira-mono font-fira-mono-for-powerline

echo "Done."
